<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="@drawable/lr270ffffffffff4e328b"
    android:padding="26dp">

    <!-- Text "Choose an option:" -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose an option:"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#232199"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/buttonExpand1Day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Expand 1 day"
        android:layout_marginBottom="16dp"
        android:onClick="onOptionClicked" />

    <Button
        android:id="@+id/buttonMinibar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Minibar"
        android:layout_marginBottom="16dp"
        android:onClick="onOptionClicked" />

    <Button
        android:id="@+id/buttonRoomService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room Service"
        android:layout_marginBottom="16dp"
        android:onClick="onOptionClicked" />

    <Button
        android:id="@+id/buttonReportIssue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Report issue"
        android:layout_marginBottom="16dp"
        android:onClick="onOptionClicked" />

    <Button
        android:id="@+id/buttonCancelReservation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cancel Reservation"
        android:layout_marginBottom="16dp"
        android:onClick="onOptionClicked" />

    <!-- Home button with image -->
    <ImageButton
        android:id="@+id/buttonHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/casuta"
        android:background="@drawable/round_button"
        android:padding="16dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="32dp" />

</LinearLayout>
